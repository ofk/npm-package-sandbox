{
  "private": true,
  "name": "npm-package-sandbox",
  "version": "0.0.1",
  "description": "",
  "license": "UNLICENSED",
  "author": "",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc -p tsconfig.build.json",
    "lint": "run-s -c lint:*",
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:package-json": "prettier-package-json -l",
    "lint:prettier": "prettier --check .",
    "lint:tsc": "tsc",
    "lint-fix": "run-s -c lint-fix:*",
    "lint-fix:eslint": "npm run lint:eslint -- --fix",
    "lint-fix:package-json": "prettier-package-json --write",
    "lint-fix:prettier": "prettier --write .",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "test": "jest"
  },
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@ofk/eslint-config-recommend": "^6.2.0",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prettier-package-json": "^2.8.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.5"
  },
  "keywords": [],
  "lint-staged": {
    "package.json": "prettier-package-json --write",
    "*.{cjs,json,md,html}": "prettier --write",
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --ext .js,.jsx,.ts,.tsx",
      "prettier --write"
    ]
  }
}
